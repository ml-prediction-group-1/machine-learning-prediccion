import pandas as pd
import mlcroissant as mlc

croissant_dataset = mlc.Dataset('https://www.kaggle.com/datasets/ayeshaseherr/top-pakistani-universities/croissant/download')

# Mostrar record sets
record_sets = croissant_dataset.metadata.record_sets
print(record_sets)

# Cargar primer record set
record_set_df = pd.DataFrame(croissant_dataset.records(record_set=record_sets[0].uuid))

# Guarda el dataset para training.py
record_set_df.to_csv("../data/universities.csv", index=False)

